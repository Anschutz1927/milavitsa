<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardBackgroundColor="#aad8eab0"
    android:layout_height="300dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/view_series_cardview_view1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_menu_camera"
                android:id="@+id/view_series_cardview_image1"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:layout_gravity="top" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view_series_cardview_name1"
                android:layout_gravity="bottom|center_horizontal"
                android:typeface="serif"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:fontFamily="serif-monospace"
                android:layout_weight="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/view_series_cardview_view2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_menu_camera"
                android:id="@+id/view_series_cardview_image2"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:layout_gravity="top" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view_series_cardview_name2"
                android:layout_gravity="bottom|center_horizontal"
                android:typeface="serif"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:fontFamily="serif-monospace"
                android:layout_weight="0" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>