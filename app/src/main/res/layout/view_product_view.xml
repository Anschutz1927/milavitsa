<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#64ffffff">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_menu_camera"
            android:id="@+id/view_product_view_imageView"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        android:layout_weight="0">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <TextView
                android:text="article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view_product_view_articleTextView"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:text="desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view_product_view_descTextView"
                android:textStyle="normal|italic"
                android:textColor="@android:color/background_dark"
                android:layout_margin="5dp" />

            <TextView
                android:text="sizes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view_product_view_sizesTextView"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:text="idRubric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view_product_view_idRubricTextView"
                android:textAlignment="textEnd"
                android:layout_marginRight="10dp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>